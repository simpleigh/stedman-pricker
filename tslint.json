{
    "extends": "tslint:latest",
    "rules": {
        "interface-name": [
            true,
            "never-prefix"
        ],
        "max-line-length": [true, 80],
        "member-ordering": false,
        "only-arrow-functions": [true],
        "quotemark": [
            true,
            "single",
            "avoid-escape"
        ],
        "radix": false,
        "variable-name": [
            true,
            "ban-keywords",
            "check-format",
            "allow-leading-underscore"
        ]
    }
}
