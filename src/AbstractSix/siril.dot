/**
 * Renders a six for consumption by siril-based provers
 * @param {number}   touchRows  rows remaining in the touch
 */

{{
	context.touchRows = context.touchRows || Infinity;
}}

{{? context.object.getCall() === Pricker.Call.Plain }}
	plain
{{?? context.object.getCall() === Pricker.Call.Bob }}
	bob
{{?? context.object.getCall() === Pricker.Call.Single }}
	single
{{?}}
,
 /* single space */

{{? context.touchRows > 1}}
	{{? context.touchRows >= 6 }}
		{{= Pricker.SixType[context.object.type].toLowerCase() }}
	{{??}}
		+
		{{= context.object.notation.slice(0, context.touchRows - 1).join('.') }}
	{{?}}
	,
	 /* single space */
{{?}}
