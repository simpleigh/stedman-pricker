/**
 * Renders a Pattern as text
 * @param {string} end - line ending
 */

{{? context.end === undefined }}
	{{ context.end = '\n'; }}
{{?}}

{{? context.object.getMatches() > 0 }}

	{{? context.object.isWildcardMatch() || context.object.getMatches() > 1 }}
		{{= context.object.getMatches() }}
		 /* single space */
	{{?}}

	{{= context.object.getName() }}

	{{= context.end }}

{{?}}
