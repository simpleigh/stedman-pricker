/**
 * Renders a PatternGroup as text
 */

{{? context.object.getMatchCount() > 0 }}

	{{= context.object.getMatchCount() }}

	 /* single space */

	{{= context.object.getName() }}

	{{? context.object.getSubmatchCount() > 0 }}

		 /* single space */
		(

		{{ var first = true; }}
		{{~ context.object.getPatterns() :pattern }}
			{{ if (!pattern) { continue; } /* IE8 trailing comma */ }}
			{{? pattern.getMatchCount() > 0 }}
				{{? !first }}, {{?}}
				{{= pattern.print('text', {'end': ''}) }}
				{{ first = false; }}
			{{?}}
		{{~}}

		)

	{{?}}

	{{= '\n' }}

{{?}}
