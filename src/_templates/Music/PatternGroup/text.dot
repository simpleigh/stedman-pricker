/**
 * Renders a PatternGroup as text
 */

{{? context.object.getMatches() > 0 }}

	{{= context.object.getMatches() }}

	 /* single space */

	{{= context.object.getName() }}

	 /* single space */
	(

	{{ var first = true; }}
	{{~ context.patterns :pattern }}
		{{? pattern.getMatches() > 0 }}
			{{? !first }}, {{?}}
			{{= pattern.print('text', {'end': ''}) }}
			{{ first = false; }}
		{{?}}
	{{~}}

	)

	{{= '\n' }}

{{?}}
